;// Language.ini ///
;// This file contains all declarations that are specific to a language.
;// for example, this is where we set the unicode font for a language

Language
  UnicodeFontName = 細明體
  ;LocalFontFile = PLCC____.TTF  ;//When we add our game fonts... this is where we do it.
  UseHardWordWrap = Yes           ;// Used to force word wrapping no matter what character we are on at the end of the space
  CopyrightFont = 細明體 24 Yes; //Used to display copyright at start of game
  MessageFont   = 細明體 20 Yes; //Used for messages at top of screen.
  MilitaryCaptionTitleFont = 細明體 24 Yes ;Mission briefing text in bottom left corner.
  MilitaryCaptionFont = 細明體 24 No ;Mission briefing text in bottom left corner.
  MilitaryCaptionDelayMS = 250
  SuperweaponCountdownNormalFont = 細明體 20 No  ;superweapon countdown in top right
  SuperweaponCountdownReadyFont = 細明體 20 Yes  ;superweapon countdown in top right
  NamedTimerCountdownNormalFont = 細明體 20 No  ;mission specific timer
  NamedTimerCountdownReadyFont = 細明體 20 No  ;mission specific timer
  DrawableCaptionFont = 細明體 20 No ;captions over objects like construction percent.
  DefaultWindowFont = 細明體 28 No; default font used by windows that don't specify font.
  DefaultDisplayStringFont = 細明體 24 No;  default font used for strings that don't specify font.
  TooltipFontName = 細明體 16 No; mouse tooltips
  NativeDebugDisplay = FixedSys 16 No;  used to display frame rate and other debug stats.
  DrawGroupInfoFont = 細明體 20 No; used to diplay number of selection group to left of unit health bar.
  CreditsTitleFont = "Placard MT Condensed" 48 No; used to diplay number of selection group to left of unit health bar.
  CreditsMinorTitleFont = "Arial Unicode MS" 32 Yes; used to diplay number of selection group to left of unit health bar.
  CreditsNormalFont = "Arial Unicode MS" 28 No; used to diplay number of selection group to left of unit health bar.
End
